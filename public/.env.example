# General app settings
# --------------------

APP_NAME="Business Manager"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# MySQL database
# --------------

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Emails sent by the system
# -------------------------

MAIL_FROM_NAME="Example"
MAIL_FROM_ADDRESS="noreply@example.com"

# Email configuration
# -------------------

# Supported: "smtp", "mail", "sendmail", "mailgun", "mandrill", "ses", "sparkpost", "log"
# https://laravel.com/docs/5.7/mail

MAIL_DRIVER=mailgun
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_ENCRYPTION=tls
MAIL_USERNAME=null
MAIL_PASSWORD=null

# Only if you use Mailgun
# -----------------------

MAILGUN_DOMAIN=
MAILGUN_SECRET=

# DO NOT EDIT BELOW THIS LINE
# ---------------------------

SESSION_DRIVER=database